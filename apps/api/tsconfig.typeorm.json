{
  "compilerOptions": {
      "baseUrl": ".",
      "outDir": "../../dist/out-tsc",
      "module": "commonjs",
      "moduleResolution": "node",
      "types": [
          "node"
      ],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es2015",
      "paths": {
          "@project-tracker/enums": [
              "../../libs/enums/src"
          ],
      }
  },
  "ts-node": {
      "require": [
          "tsconfig-paths/register"
      ]
  },
  "exclude": [
      "**/*.spec.ts",
      "**/*.test.ts"
  ],
  "include": [
      "**/*.ts"
  ]
}